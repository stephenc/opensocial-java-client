<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.socialdivideandconquer"
    android:versionName="1.5"
    android:versionCode="12">
    <application android:label="@string/app_name" android:icon="@drawable/ballsicon" android:allowClearUserData="true">
        <activity android:name=".OpenSocialChooserActivity"></activity>
        <activity android:name=".SocialDivideAndConquerActivity"
                android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                android:screenOrientation="portrait"
                android:configChanges="orientation|keyboardHidden"
                android:launchMode="singleTask"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="divide-and-conquer-opensocial"/> 
            </intent-filter>
        </activity>
        <activity android:name=".Preferences"/>
         <!-- Activity provided by the library -->
    </application>
  
    <!-- This permission must be included -->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
</manifest> 
